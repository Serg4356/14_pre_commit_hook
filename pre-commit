#  Path to local PowerShell:
powerShellPath="c:/Windows/System32/WindowsPowerShell/v1.0/powershell.exe"
powerShellCommand="-ExecutionPolicy RemoteSigned -Command"
# Command to run unittest:
pythonExePath="C:\ProgramData\Anaconda3\python.exe"
testUnitPath="G:\devman\14_pre_commit_hook\tests.py"
# Running pre-commit and gets exit-code:
runString=$powerShellPath' '$powerShellCommand' '$pythonExePath' '$testUnitPath
exec $runString
exitCode=$?
echo "Exit-code of unittest is:"
echo $exitCode
if [ x"$exitCode" == x"0" ]
then
 exit 0
else
 echo "Not all unit-tests passed! Commit cancelled!"
 exit 1
fi